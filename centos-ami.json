{
  "_comment": "Build with `packer build centos-ami.json`",
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "ap-northeast-1",
    "source_ami": "ami-25bd2743",
    "instance_type": "t2.micro",
    "ssh_username": "centos",
    "ami_name": "cenos7-base {{timestamp}}"
  }],
  "provisioners": [
    {
      "environment_vars": [
        "CLEANUP_BUILD_TOOLS={{user `cleanup_build_tools`}}",
        "DESKTOP={{user `desktop`}}",
        "UPDATE={{user `update`}}",
        "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
        "SSH_USERNAME={{user `ssh_username`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "ftp_proxy={{user `ftp_proxy`}}",
        "rsync_proxy={{user `rsync_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "script/update.sh"
      ],
      "type": "shell",
      "expect_disconnect": "true"
    },
    {
      "environment_vars": [
        "CLEANUP_BUILD_TOOLS={{user `cleanup_build_tools`}}",
        "DESKTOP={{user `desktop`}}",
        "UPDATE={{user `update`}}",
        "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
        "SSH_USERNAME={{user `ssh_username`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "ftp_proxy={{user `ftp_proxy`}}",
        "rsync_proxy={{user `rsync_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "script/fix-slow-dns.sh",
        "script/sshd.sh",
        "script/desktop.sh",
        "script/motd.sh",
        "script/sudo.sh",
        "custom-script.sh",
        "script/cleanup.sh"
      ],
      "type": "shell",
      "pause_before": "10s"
    }
  ],
  "variables": {
    "cleanup_build_tools": "false",
    "cpus": "1",
    "desktop": "false",
    "disk_size": "65536",
    "ftp_proxy": "{{env `ftp_proxy`}}",
    "headless": "",
    "http_directory": "kickstart/centos7",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "install_vagrant_key": "true",
    "iso_checksum": "ec7500d4b006702af6af023b1f8f1b890b6c7ee54400bb98cef968b883cd6546",
    "iso_checksum_type": "sha256",
    "iso_name": "CentOS-7-x86_64-DVD-1708.iso",
    "iso_path": "iso",
    "iso_url": "http://mirrors.kernel.org/centos/7.4.1708/isos/x86_64/CentOS-7-x86_64-DVD-1708.iso",
    "kickstart": "ks.cfg",
    "memory": "512",
    "no_proxy": "{{env `no_proxy`}}",
    "parallels_guest_os_type": "centos",
    "rsync_proxy": "{{env `rsync_proxy`}}",
    "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "update": "true",
    "vagrantfile_template": "",
    "version": "0.0.99",
    "virtualbox_guest_os_type": "RedHat_64",
    "virtualbox_paravirtprovider": "default",
    "virtualbox_nictype": "virtio",
    "vm_name": "centos7",
    "vmware_guest_os_type": "centos-64"
  }
}
